{% extends 'base.html.twig' %}

{% block title %}All Projects{% endblock %}

{% block body %}
    <div class="container">
        <h1>All Projects</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Is Selected</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.name }}</td>
                        <td>{{ project.content }}</td>
                        <td>{{ project.isSelected ? 'Yes' : 'No' }}</td>
                        <td>
                            {% if not project.isSelected %}
                                <a href="{{ path('app_student_select_project', {'id': project.id}) }}" class="btn btn-primary">Select</a>
                            {% else %}
                                <span class="text-success">Selected</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
