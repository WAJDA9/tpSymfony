{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
   <div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">  <div class="py-12">
        <h1 class="text-4xl mb-6 text-center">Register</h1>

        {{ form_start(registrationForm) }}
        <div class="mb-3">
          {{ form_row(registrationForm.email, {'label': 'Email', 'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
          {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
          {{ form_row(registrationForm.roles, {'label': 'Role', 'attr': {'class': 'form-control'}}) }}
        </div>

       
  
    
</div>


        <div class="text-center">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
        {{ form_end(registrationForm) }}
      </div>
    </div>
  </div>
</div>

{% endblock %}
