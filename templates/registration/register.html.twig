{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <div class="mt-10 sm:mt-0 py-12 border-b border-gray-200">
            <h1 class="text-3xl font-extrabold text-center">Register</h1>

            <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
                {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_row(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 text-gray-700 bg-gray-200 rounded'}}) }}
                </div>
                <div>
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 text-gray-700 bg-gray-200 rounded'}}) }}
                </div>
                <div>
                    {{ form_row(registrationForm.roles, {'attr': {'class': 'w-full px-3 py-2 text-gray-700 bg-gray-200 rounded'}}) }}
                </div>
                <div>
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
                <div>
                    <button type="submit" class="w-full py-3 mt-4 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Register</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
