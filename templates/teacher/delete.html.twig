{% extends 'base.html.twig' %}

{% block title %}Delete Project{% endblock %}

{% block body %}
    <div class="container">
        <h1>Delete Project</h1>
        <p>Are you sure you want to delete the project "{{ project.name }}"?</p>
        
        <form method="post" action="{{ path('app_teacher_delete', {'id': project.id}) }}">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a href="{{ path('app_teacher') }}" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
{% endblock %}
