{% extends 'base.html.twig' %}

{% block title %}Modify Project{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modify Project</h1>
        <form method="post">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.name, 'Name') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.duration, 'Duration') }}
                {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.content, 'Content') }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3 form-check">
                {{ form_label(form.isSelected, 'Is Selected', {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_widget(form.isSelected, {'attr': {'class': 'form-check-input'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.pre_requis, 'pre_requis')}}
                {{ form_widget(form.pre_requis, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
